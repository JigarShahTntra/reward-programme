<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h1>User Login</h1>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="form-group">
    <div class="input-group">
      <%= f.label :email, class: 'input-group-prepend' do %>
        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
      <% end %>
      <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "Email ID" %>
    </div>
    <!-- <div class="form-text error">Email id is not valid.</div> -->
  </div>
  <div class="form-group">
    <div class="input-group">
      <%= f.label :password, class: 'input-group-prepend' do %>
        <span class="input-group-text"><i class="fas fa-lock"></i></span>
      <% end %>
      <%= f.password_field :password, class: "form-control", placeholder: 'Password' %>
    </div>
    <!-- <div class="form-text error">Password is incorrect.</div> -->
  </div>
  <div class="row btn-row">
    <div class="col-sm-6">
      <%= f.submit "Login", class: "btn btn-dark" %>
    </div>
    <div class="col-sm-6 forgot-link">
      <%= link_to "Forgot Password?", new_password_path(resource_name) %><br />
    </div>
  </div>
<% end %>
