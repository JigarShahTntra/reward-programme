<h2>Sign up</h2>

<%= form_with(model: Organization, url: organizations_path, method: :post, local: true) do |f| %>
  <%= render "users/shared/error_messages", resource: @user %>

  <h4> Organization Details </h4>

  <%= render partial: 'organization/organizations/organization_form_fields', locals: { f: f } %>

  <h4> Primary Contact Details </h4>

  <%= f.fields_for :users do |u| %>
    <%= render partial: 'organization/organizations/primary_contact_fields', locals: { u: u } %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= render "users/shared/links" %>
