<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <h1>Reset Password</h1>
  <div class="form-group">
    <div class="input-group">
      <%= f.label :password, class: 'input-group-prepend' do %>
        <span class="input-group-text"><i class="fas fa-lock"></i></span>
      <% end %>
      <%= f.password_field :password, class: "form-control", placeholder: 'New Password' %>
    </div>
  </div>
  <div class="form-group">
    <div class="input-group">
      <%= f.label :password_confirmation, class: 'input-group-prepend' do %>
        <span class="input-group-text"><i class="fas fa-lock"></i></span>
      <% end %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: 'Confirm Password' %>
    </div>
  </div>
  <div class="row btn-row">
    <div class="col-sm-6">
      <%= f.submit "Reset Password", class: "btn btn-dark" %>
    </div>
  </div>
<% end %>
