<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <h1>Forgot Password?</h1>
  <div class="notes">Enter your registered email id. You will receive an email to reset your password.</div>
  <div class="form-group">
    <div class="input-group">
      <%= f.label :email, class: 'input-group-prepend' do %>
        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
      <% end %>
      <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "Email ID" %>
    </div>
  </div>
  <div class="row btn-row">
    <div class="col-sm-6">
      <%= f.submit "Reset Password", class: "btn btn-dark" %>
    </div>
    <div class="col-sm-6 forgot-link">
      <%= link_to "Login", new_session_path(resource_name) %><br />
    </div>
  </div>
<% end %>
